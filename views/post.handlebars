<div class="project">
    <div>
        <div id="post-title">
            <h2>{{this.title}}</h2>
            <p id="post-date">Posted by {{this.user.name}} on {{format_date this.date_created}}</p>
        </div>
        <p id="post-body">{{this.body}}</p>
    </div>
</div>
<div class="project">
    {{#if logged_in}}
    <input name="commentText" type="text" class="comment-input" placeholder="Add Comment...">
    <button id="comment-btn" class="btn btn-primary" data-id="{{this.id}}">Comment</button>
    {{else}}
    <a href="/login"><button class="btn btn-primary">Login To Add Comment</button></a>
    {{/if}}
</div>

    <h2>Comments</h2>
    {{#each this.comments as |comment|}}
    <div class="comment-text">
        <p>{{comment.text}}</p>
        <p class="comment-creation">Posted by {{comment.user.name}}</p>
    </div>
    {{/each}}
<script src="/js/comment.js"></script>
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="dash-main">
  <div class="create-post">


    <form class="form new-project-form">
      <h3>Create a New Blog Post:</h3>
      <div class="form-group">
        <label for="project-name">Post Name:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Text:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <div class="col-auto">
    <h2>Your Posts:</h2>
  </div>

  {{#each posts as |post| }}
  <div class="dashboard-project">
    <div>
      <div id="post-title">
        <a href="/posts/{{post.id}}"><h2>{{this.title}}</h2></a>
        <p>
          <a href="/post/{{post.id}}"><button class="edit-btn btn btn-primary">edit</button></a>
          <button class="delete-btn btn btn-primary" data-id="{{post.id}}">delete</button>
        </p>
      </div>
      <p id="post-body">{{this.body}}</p>
    </div>
  </div>
  {{/each}}
</div>

<script src="./js/profile.js"></script>